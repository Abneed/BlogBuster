<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | BlogBuster</title>
    
    <style>
        body{
            margin:0;
        }
        table{
            border: 3px solid black;
        }
        th {
            border: 1px solid black;
        }
        td {
            border: 1px solid black;
            padding: 4px;
        }
        img {
            max-width: 128px;
            height: auto;
        }
    </style>
</head>
<body>
    @{
        Html.RenderPartial("_HeaderNavBar");
    }
    <div>
        @RenderBody()
    </div>
    @{ 
        Html.RenderPartial("_Footer");
    }
</body>
</html>